<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F8F9FC"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_48"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:padding="@dimen/widget_size_5"
                android:src="@mipmap/icon_back_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_25"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="玩法说明"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/sure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:layout_gravity="center"
                android:textColor="#D3D3E6"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_358"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/widget_size_10">

            <EditText
                android:id="@+id/main_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/shape_et_cursor_color"
                android:maxLines="50"
                android:background="@null"
                android:gravity="left"
                android:hint="欢迎语、玩法详细说明、公会信息（输入有趣的话题，可以提高活跃度哦）"
                android:textColorHint="#ffd3d3e6"
                android:textSize="@dimen/widget_size_16" />


            <TextView
                android:id="@+id/textnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="right"
                android:text="0/200"
                android:textColor="#d3d3e6"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>