<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_48"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:padding="@dimen/widget_size_5"
                android:src="@mipmap/icon_back_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_25"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="房间密码"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/save_tv"
                android:layout_width="@dimen/widget_size_28"
                android:layout_height="@dimen/widget_size_22"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="保存"
                android:textColor="#5F85FF"
                android:textSize="@dimen/font_size_14"
                android:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingRight="@dimen/widget_size_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="房间密码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_17"
                    android:textStyle="bold" />


                <CheckBox
                    android:id="@+id/main_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_selecter"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_1"
                android:background="#F2F2F8" />

            <LinearLayout
                android:id="@+id/pass_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/room_name_et"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_size_18"
                    android:layout_marginBottom="@dimen/widget_size_18"
                    android:background="@null"
                    android:hint="请输入四位数密码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textCursorDrawable="@drawable/shape_et_cursor_color"
                    android:maxLines="1"
                    android:textColor="#6B6B8A"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/clear_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="删除"
                    android:layout_marginLeft="@dimen/widget_size_20"
                    android:layout_marginRight="@dimen/widget_size_20"
                    android:textColor="#ffd3d2e5"
                    android:textSize="@dimen/font_size_16" />
                <TextView
                    android:id="@+id/textnum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0/4"
                    android:textColor="#ffd3d2e5"
                    android:textSize="@dimen/font_size_16" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F8F9FC" />


    </LinearLayout>


</LinearLayout>