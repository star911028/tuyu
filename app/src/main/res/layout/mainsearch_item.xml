<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/widget_size_10"
    android:background="@drawable/main_card_bg"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_size_20"
        android:layout_marginLeft="@dimen/widget_size_15"
        android:layout_marginTop="@dimen/widget_size_20"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_iv"
            android:layout_width="@dimen/widget_size_70"
            android:layout_height="@dimen/widget_size_70"
            android:layout_gravity="center"
            android:src="@mipmap/rabblt_icon"
            app:civ_border_color="@color/transparent20"
            app:civ_border_width="0dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/widget_size_15"

                android:ellipsize="end"
                android:maxEms="8"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="音遇女神"
                android:textColor="#ff33334a"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/user_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/widget_size_3"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/widget_size_5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sex_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/widget_size_15"
                        android:layout_marginRight="@dimen/widget_size_5"
                        android:background="@drawable/room_sex"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sex_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/widget_size_10"
                            android:layout_marginRight="@dimen/widget_size_10"
                            android:drawableLeft="@mipmap/man"
                            android:drawablePadding="@dimen/widget_size_2"
                            android:gravity="center"
                            android:text="LV.21"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size_10" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/level_iv"
                        android:src="@mipmap/label_levle_0"
                        android:layout_marginRight="@dimen/widget_size_5"
                        android:layout_width="@dimen/widget_size_40"
                        android:layout_height="@dimen/widget_size_15" />



                    <TextView
                        android:id="@+id/addres_tv"
                        android:text="武汉"
                        android:paddingLeft="@dimen/widget_size_9"
                        android:paddingRight="@dimen/widget_size_9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_10"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/addres_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/room_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/widget_size_3"
                android:layout_marginTop="@dimen/widget_size_3"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/widget_size_20"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:background="@drawable/main_card_bt1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/numpeo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/widget_size_10"
                        android:layout_marginRight="@dimen/widget_size_10"
                        android:drawableLeft="@mipmap/icon_fire"
                        android:drawablePadding="@dimen/widget_size_2"
                        android:gravity="center"
                        android:text="64人在玩"
                        android:textColor="#ffff5294"
                        android:textSize="@dimen/font_size_10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/widget_size_20"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:background="@drawable/main_card_bt2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/widget_size_10"
                        android:layout_marginRight="@dimen/widget_size_10"
                        android:gravity="center"
                        android:text="处对象"
                        android:textColor="#ff6783f7"
                        android:textSize="@dimen/font_size_10" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lock_ll"
                    android:layout_width="@dimen/dp_size_20"
                    android:layout_height="@dimen/widget_size_20"
                    android:background="@drawable/room_lock_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@mipmap/room_lock" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tuercode_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兔语号：12345678"
                android:textColor="#ff6b6b8d"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>


    <ImageView
        android:id="@+id/talk_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/widget_size_15"
        android:src="@mipmap/face_message1"
        android:visibility="gone" />

</LinearLayout>


    </LinearLayout>