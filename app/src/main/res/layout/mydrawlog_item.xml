<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="@dimen/widget_size_16"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_size_3"
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_size_3"
            android:paddingBottom="@dimen/widget_size_3">

            <TextView
                android:id="@+id/type_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="提现500元(审核中)"
                android:textColor="#ff33334a"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/nums_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5000元宝"
                android:textColor="#ffa9aac6"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_size_3"
            android:paddingBottom="@dimen/widget_size_3">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2019-06-30"
                android:textColor="#ffa9a9c6"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：2153512"
                android:textColor="#ffa9a9c6"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>