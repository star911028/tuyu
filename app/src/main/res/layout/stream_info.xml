<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ctrl_stream_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_margin="@dimen/size_level5"
        android:background="@color/mine_safe_bg">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/user_boom"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="iphoneX"
                android:textColor="@color/white"
                android:textSize="@dimen/widget_size_5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="延迟：0ms"
                android:textColor="@color/white"
                android:textSize="@dimen/widget_size_5" />

            <TextView
                android:id="@+id/card_frame_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/widget_size_5" />

            <TextView
                android:id="@+id/packet_loss_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢包率：0%"
                android:textColor="@color/white"
                android:textSize="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_boom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/audio_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/room_gift" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:max="60"
                android:progress="0" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>