<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#F8F9FC"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="性别只能修改一次"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_59"
            android:layout_marginTop="@dimen/widget_size_45"
            android:layout_marginRight="@dimen/widget_size_59"
            android:orientation="horizontal">


            <RadioGroup
                android:id="@+id/sex_rg"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/man_rb"
                    android:layout_width="@dimen/widget_size_90"
                    android:background="@drawable/sex_man_tab"
                    android:button="@null"
                    android:checked="true"
                    android:layout_height="@dimen/widget_size_90" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <RadioButton
                    android:id="@+id/women_rb"
                    android:layout_width="@dimen/widget_size_90"
                    android:background="@drawable/sex_women_tab"
                    android:button="@null"
                    android:layout_height="@dimen/widget_size_90" />

            </RadioGroup>
            <ImageView
                android:id="@+id/man_iv"
                android:layout_width="@dimen/widget_size_90"
                android:layout_height="@dimen/widget_size_90"
                android:layout_gravity="left"
                android:visibility="gone"
                android:src="@mipmap/rabblt_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/women_iv"
                android:layout_width="@dimen/widget_size_90"
                android:visibility="gone"
                android:layout_height="@dimen/widget_size_90"
                android:layout_gravity="right"
                android:src="@mipmap/rabblt_icon" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_size_20"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/widget_size_20"
        android:paddingRight="@dimen/widget_size_20">

        <TextView
            android:id="@+id/canel_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_size_50"
            android:layout_marginRight="@dimen/widget_size_5"
            android:layout_weight="1"
            android:background="@drawable/sex_canel"
            android:gravity="center"
            android:text="取消"
            android:textColor="#A9A9C6"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sure_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_size_50"
            android:layout_marginLeft="@dimen/widget_size_5"
            android:layout_weight="1"
            android:background="@drawable/sex_sure2"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>