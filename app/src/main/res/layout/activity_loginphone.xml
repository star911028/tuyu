<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_25"
            android:layout_marginBottom="@dimen/widget_size_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:src="@mipmap/arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_25"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" 绑定手机"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/pass_tv"
                android:layout_width="@dimen/widget_size_28"
                android:layout_height="@dimen/widget_size_22"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:visibility="invisible"
                android:text="跳过"
                android:textColor="#ff6b6b8d"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/widget_size_40"
            android:src="@mipmap/rabblt_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_28"
            android:layout_marginBottom="@dimen/widget_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="手机号"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_14" />


            <com.fengyuxing.tuyu.util.ClearableEditText
                android:id="@+id/phone_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:layout_marginRight="@dimen/widget_size_20"
                android:textCursorDrawable="@drawable/shape_et_cursor_color"
                android:maxEms="11"
                android:inputType="number"
                android:textColorHint="#ffa9a9c6"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_14" />


            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="@dimen/widget_size_20"
                android:layout_height="@dimen/widget_size_20"
                android:layout_marginRight="@dimen/widget_size_20"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@mipmap/group" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:background="#fff2f2f8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_28"
            android:layout_marginTop="@dimen/widget_size_30"
            android:layout_marginBottom="@dimen/widget_size_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="验证码"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_14" />


        <!--    <com.zy.live.util.CustomEditText
                android:id="@+id/code_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="#ffa9a9c6"
                android:hint="请输入验证码"
                android:maxEms="6"
                android:inputType="number"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_14" />-->


            <com.fengyuxing.tuyu.util.ClearableEditText
                android:id="@+id/code_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColorHint="#ffa9a9c6"
                android:textCursorDrawable="@drawable/shape_et_cursor_color"
                android:hint="请输入验证码"
                android:maxLength="6"
                android:inputType="number"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_14" />



            <TextView
                android:id="@+id/getcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_size_20"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ff6783f7"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginRight="@dimen/widget_size_20"
            android:background="#fff2f2f8" />

        <Button
            android:id="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:layout_marginTop="@dimen/widget_size_30"
            android:layout_marginRight="@dimen/widget_size_10"
            android:background="@drawable/login_bg"
            android:onClick="weiXinLogin"
            android:text="登录"
            android:textColor="#ffffffff"
            android:textSize="@dimen/font_size_18" />


    </LinearLayout>


</LinearLayout>