<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="@dimen/widget_size_15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:text="上传头像"
            android:textColor="#a9a9c6"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:background="#f2f2f8"
            android:layout_height="@dimen/widget_size_1" />
        <TextView
            android:id="@+id/picture_selector_take_photo_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#6783f7"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:background="#f2f2f8"
            android:layout_height="@dimen/widget_size_1" />
        <TextView
            android:id="@+id/picture_selector_pick_picture_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:text="从相册选择"
            android:textColor="#6783f7"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/picture_selector_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/widget_size_15"
        android:background="@drawable/pic_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="#a9a9c6"
        android:textSize="16dp"
        android:textStyle="bold" />


</LinearLayout>