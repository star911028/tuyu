<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/widget_size_10"
    android:layout_marginTop="@dimen/widget_size_10"
    android:layout_height="@dimen/widget_size_60">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/widget_size_60"
        android:layout_height="@dimen/widget_size_60"
        android:scaleType="centerCrop"
        android:src="@mipmap/rabblt_icon"
        app:civ_border_color="@color/bank_bg3"
        app:civ_border_width="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:orientation="vertical"
        android:textSize="@dimen/font_size_15">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:layout_marginTop="@dimen/widget_size_8"
            android:layout_marginBottom="@dimen/widget_size_5"
            android:layout_toRightOf="@+id/iv_pic"
            android:ellipsize="end"
            android:maxWidth="@dimen/widget_size_180"
            android:maxLength="11"
            android:maxLines="1"
            android:text="这是用户昵称最多十一字..."
            android:textColor="#33334A"
            android:textSize="@dimen/font_size_16" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/widget_size_8"
                android:paddingTop="@dimen/widget_size_2"
                android:paddingRight="@dimen/widget_size_8"
                android:paddingBottom="@dimen/widget_size_2"
                android:drawableLeft="@mipmap/man"
                android:background="@drawable/user_age_bg"
                android:layout_marginRight="@dimen/widget_size_5"
                android:drawablePadding="@dimen/widget_size_2"
                android:text="22"
                android:textColor="#ffffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_bg1"
                android:paddingLeft="@dimen/widget_size_8"
                android:paddingTop="@dimen/widget_size_2"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="@dimen/widget_size_8"
                android:paddingBottom="@dimen/widget_size_2"
                android:text="LV.20"
                android:textColor="#ffffffff"
                android:textSize="10sp" />


        </LinearLayout>
    </LinearLayout>





</RelativeLayout>
