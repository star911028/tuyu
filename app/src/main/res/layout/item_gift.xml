<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/widget_size_2"
    android:gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/sec_bg_ll"
        android:layout_width="@dimen/widget_size_72"
        android:layout_height="@dimen/widget_size_72"
        android:background="@drawable/gift_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grid_fragment_home_item_img"
            android:layout_width="@dimen/widget_size_70"
            android:layout_height="@dimen/widget_size_70"
            android:src="@drawable/rabblt_icon" />


        <TextView
            android:id="@+id/count_tv"
            android:textColor="@color/white"
            android:layout_gravity="right|top"
            android:text="x10"
            android:textSize="@dimen/font_size_12"
            android:visibility="gone"
            android:layout_marginTop="@dimen/widget_size_2"
            android:layout_marginRight="@dimen/widget_size_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <TextView
        android:id="@+id/grid_fragment_home_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/widget_size_3"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999"
        android:drawablePadding="@dimen/widget_size_2"
        android:drawableLeft="@mipmap/diamond_20px"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_10" />

</LinearLayout>