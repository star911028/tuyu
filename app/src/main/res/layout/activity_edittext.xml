<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_48"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:padding="@dimen/widget_size_5"
                android:src="@mipmap/icon_back_black" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_25"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我的昵称"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:id="@+id/save_tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/editnotext_col"
                android:textSize="18sp" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:background="#F2F2F8" />

        <LinearLayout
            android:id="@+id/name_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_60"
            android:background="@color/white"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingRight="@dimen/widget_size_20">


            <EditText
                android:id="@+id/edtext_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入昵称"
                android:textCursorDrawable="@drawable/shape_et_cursor_color"
                android:maxLength="15"
                android:maxEms="15"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="#33334A"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/textnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0/15"
                android:textColor="#A9A9C6"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/induce_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_167"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="@dimen/widget_size_18"
            android:paddingLeft="@dimen/widget_size_15"
            android:paddingRight="@dimen/widget_size_20">


            <EditText
                android:id="@+id/edtext_et2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:background="@null"
                android:hint="请输入个性签名"
                android:textCursorDrawable="@drawable/shape_et_cursor_color"
                android:maxEms="40"
                android:maxLines="3"
                android:maxLength="40"
                android:textColor="#33334A"
                android:textSize="@dimen/font_size_16" />


            <TextView
                android:id="@+id/textnum_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/widget_size_20"
                android:text="0/40"
                android:textColor="#A9A9C6"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>