<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <com.fengyuxing.tuyu.showpic.PhotoViewPager
        android:id="@+id/view_pagerrank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_size_40"
        android:layout_marginBottom="@dimen/widget_size_40" />


    <TextView
        android:id="@+id/tv_image_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:text="0/5" />


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/widget_size_15"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/widget_size_10"
        android:text="保存" />

</RelativeLayout>