<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ipopwindowlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d000000"
    android:clickable="false">


    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="@dimen/widget_size_300"
        android:layout_height="@dimen/widget_size_235"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/exit_center_bg"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_size_20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_30"
                android:layout_weight="1"
                android:gravity="center"
                android:text="该房间已上锁"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:src="@mipmap/back_close_gray" />


        </LinearLayout>


        <lsp.com.lib.PasswordInputEdt
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_size_35"
            android:layout_marginTop="@dimen/widget_size_30"
            android:layout_marginRight="@dimen/widget_size_35"
            app:circleRadius="@dimen/widget_size_10"
            app:isNumber="true"
            app:rectNormalColor="#F8F9FC"
            app:rectChooseColor="#F8F9FC"
            app:bgFill="true"
            app:textColor="@color/black"
            app:rectStroke="@dimen/widget_size_10"
            app:txtSize="@dimen/font_size_24"
            app:isPwd="false"
            app:numLength="4"
            app:widthSpace="@dimen/widget_size_10" />


        <TextView
            android:id="@+id/enter_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_30"
            android:layout_marginRight="@dimen/widget_size_20"
            android:background="@drawable/pwd_enter"
            android:gravity="center"
            android:paddingTop="@dimen/widget_size_13"
            android:paddingBottom="@dimen/widget_size_13"
            android:text="立即进入"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />


    </LinearLayout>


</RelativeLayout>