<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_48"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:padding="@dimen/widget_size_5"
                android:src="@mipmap/icon_back_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_25"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关于兔语"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_18" />

            <TextView
                android:layout_width="@dimen/widget_size_28"
                android:layout_height="@dimen/widget_size_22"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="跳过"
                android:textColor="#ff6b6b8d"
                android:textSize="@dimen/font_size_14"
                android:visibility="invisible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_30"
                android:src="@mipmap/rabblt_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_21"
                android:src="@mipmap/rabbit_font" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_10"
                android:gravity="center"
                android:text="超好玩的语音聊天室"
                android:textColor="#ff6783f7"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/version_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_10"
                android:gravity="center"
                android:text="版本：V1.0.1"
                android:textColor="#ffa9a9c6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/check_update_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_50"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_40"
                android:layout_marginRight="@dimen/widget_size_20"
                android:layout_marginBottom="@dimen/widget_size_20"
                android:background="@drawable/check_update_bg"
                android:gravity="center"
                android:text="检查更新"
                android:textColor="#5f85ff"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F8F9FC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rule_tv"
                    android:layout_width="69dp"
                    android:layout_height="22dp"
                    android:text="服务协议 | "
                    android:textColor="#ff6783f7"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ys_tv"
                    android:layout_width="56dp"
                    android:layout_height="22dp"
                    android:text="隐私政策"
                    android:textColor="#ff6783f7"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/widget_size_15"
                android:gravity="center"
                android:text="武汉赞娱科技有限公司 版权所有 &#38;#169 2019"
                android:textColor="#ffa9a9c6"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>