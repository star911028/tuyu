<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_lv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_48"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:padding="@dimen/widget_size_5"
                android:src="@mipmap/icon_back_black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/widget_size_25"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="绑定支付宝"
                android:textColor="#ff000000"
                android:textSize="@dimen/font_size_18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/widget_size_28"
                android:layout_height="@dimen/widget_size_22"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:gravity="center"
                android:text="跳过"
                android:textColor="#ff6b6b8d"
                android:textSize="@dimen/font_size_14"
                android:visibility="invisible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/widget_size_30"
                android:src="@mipmap/alipay" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/widget_size_10"
                    android:gravity="center"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:text="支付宝账号 "
                    android:textColor="#ff000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_alcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="true"
                    android:textCursorDrawable="@drawable/shape_et_cursor_color"
                    android:gravity="left|center"
                    android:hint="请输入支付宝账号"
                    android:inputType="text"
                    android:maxLength="24"
                    android:singleLine="true"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:textColor="@color/black"
                    android:textColorHint="#ffa9aac6"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_1"
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginRight="@dimen/widget_size_15"
                android:layout_marginBottom="@dimen/widget_size_15"
                android:background="#F2F2F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/widget_size_26"
                    android:gravity="center"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:text="真实姓名 "
                    android:textColor="#ff000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:singleLine="true"
                    android:focusable="true"
                    android:textCursorDrawable="@drawable/shape_et_cursor_color"
                    android:gravity="left|center"
                    android:hint="请输入真实姓名"
                    android:inputType="text"
                    android:maxLength="6"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:textColor="@color/black"
                    android:textColorHint="#ffa9aac6"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_1"
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginRight="@dimen/widget_size_15"
                android:layout_marginBottom="@dimen/widget_size_15"
                android:background="#F2F2F8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:layout_marginTop="@dimen/widget_size_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/widget_size_42"
                    android:gravity="center"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:text="验证码 "
                    android:textColor="#ff000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_yzcode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/shape_et_cursor_color"
                    android:focusable="true"
                    android:gravity="left|center"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:textColor="@color/black"
                    android:textColorHint="#ffa9aac6"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/getcode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/widget_size_20"
                    android:layout_marginRight="@dimen/widget_size_20"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/main_gray_col"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_1"
                android:layout_marginLeft="@dimen/widget_size_15"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginRight="@dimen/widget_size_15"
                android:background="#F2F2F8" />

        </LinearLayout>

        <TextView
            android:id="@+id/band_tv"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/widget_size_20"
            android:layout_marginTop="@dimen/widget_size_30"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/widget_size_20"
            android:gravity="center"
            android:textSize="@dimen/font_size_18"
            android:text="确认绑定"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_50"
            android:background="@drawable/bandphone_nor" />

    </LinearLayout>


</LinearLayout>