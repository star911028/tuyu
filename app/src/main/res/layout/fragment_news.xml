<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/widget_size_30"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/widget_size_20"
                android:src="@mipmap/home_myhome"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@mipmap/rabbit_font" />

            <ImageView
                android:id="@+id/friend_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/widget_size_20"
                android:src="@mipmap/news_friend" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/push_tips_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_size_50"
        android:background="#F8F9FC"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_10"
            android:padding="@dimen/widget_size_5"
            android:src="@mipmap/close_news" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/widget_size_26"
            android:layout_weight="1"
            android:gravity="center"
            android:text="打开消息通知，重要信息不错过"
            android:textColor="#ff6b6b8d"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/open_tv"
            android:layout_width="@dimen/widget_size_60"
            android:layout_height="@dimen/widget_size_30"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/widget_size_25"
            android:background="@drawable/push_btn"
            android:gravity="center"
            android:text="打开"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/messages_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F9FC"></LinearLayout>
</LinearLayout>
