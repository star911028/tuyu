<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/widget_size_22"
    android:paddingTop="@dimen/widget_size_10"
    android:paddingRight="@dimen/widget_size_15"
    android:paddingBottom="@dimen/widget_size_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="4"
            android:textColor="#ff5f85ff"
            android:textSize="@dimen/font_size_14" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_iv"
            android:layout_width="@dimen/widget_size_60"
            android:layout_height="@dimen/widget_size_60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_size_17"
            android:src="@mipmap/rabblt_icon"
            app:civ_border_color="@color/transparent20"
            app:civ_border_width="0dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_10"
                android:layout_marginRight="@dimen/widget_size_15"
                android:layout_marginBottom="@dimen/widget_size_7"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="音遇女神.24小时"
                android:textColor="#ff33334a"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_5"
                android:layout_marginTop="@dimen/widget_size_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sex_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/widget_size_15"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:background="@drawable/room_sex"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sex_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/widget_size_10"
                        android:layout_marginRight="@dimen/widget_size_10"
                        android:drawableLeft="@mipmap/man"
                        android:drawablePadding="@dimen/widget_size_2"
                        android:gravity="center"
                        android:text="LV.21"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_10" />

                </LinearLayout>



                <ImageView
                    android:id="@+id/level_iv"
                    android:src="@mipmap/label_levle_0"
                    android:layout_marginRight="@dimen/widget_size_5"
                    android:layout_width="@dimen/widget_size_40"
                    android:layout_height="@dimen/widget_size_15" />

            </LinearLayout>


        </LinearLayout>



        <TextView
            android:id="@+id/value_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="@dimen/widget_size_2"
            android:drawableRight="@mipmap/diamond_20px"
            android:layout_height="22dp"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:text="0"
            android:textColor="#ff5f85ff"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>