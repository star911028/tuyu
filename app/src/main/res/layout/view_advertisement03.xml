<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_size_44"
    android:id="@+id/main_ll"
    android:layout_marginRight="15dp"
    android:gravity="center"
    android:layout_marginLeft="15dp"
    android:background="@drawable/main_bank_bg1"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/type_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="#6783f7"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:text="今日土豪榜" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_iv1"
            android:layout_width="@dimen/widget_size_30"
            android:layout_marginRight="@dimen/widget_size_10"
            android:layout_height="@dimen/widget_size_30"
            android:src="@mipmap/rabblt_icon"
            app:civ_border_color="@color/bank_bg1"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_iv2"
            android:layout_width="@dimen/widget_size_30"
            android:layout_marginRight="@dimen/widget_size_10"
            android:layout_height="@dimen/widget_size_30"
            android:src="@mipmap/rabblt_icon"
            app:civ_border_color="@color/bank_bg2"
            app:civ_border_width="2dp" />
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_iv3"
            android:layout_width="@dimen/widget_size_30"
            android:layout_height="@dimen/widget_size_30"
            android:src="@mipmap/rabblt_icon"
            app:civ_border_color="@color/bank_bg3"
            app:civ_border_width="2dp" />



    </LinearLayout>



</LinearLayout>